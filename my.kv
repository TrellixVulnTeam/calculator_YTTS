<MyLayout>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1, .15)

        GridLayout:
            cols: 4
            rows: 5

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+"
                on_press: root.equals("+")





            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "-"
                on_press: root.equals("-")

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "*"
                on_press: root.equals("*")
                on_press: root.equation("*")
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "/"
                on_press: root.equals("/")
                on_press: root.equation("/")

            Button:
                id: button
                size_hint: (.2, .2)
                font_size: 32
                text: "1"
                on_press: root.button_press(1)
                on_press: root.equals("1")
            Button:
                id: button
                size_hint: (.2, .2)
                font_size: 32
                text: "2"
                on_press: root.button_press(2)
                on_press: root.equals("2")

            Button:
                id: button
                size_hint: (.2, .2)
                font_size: 32
                text: "3"
                on_press: root.button_press(3)
                on_press: root.equals("3")


            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: ""
