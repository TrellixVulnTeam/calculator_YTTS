                text: "5"
                on_press: root.button_press(5)
                on_press: root.equals("5")

            Button:
                id: button
                size_hint: (.2, .2)
                font_size: 32
                text: "6"
                on_press: root.button_press(6)
                on_press: root.equals("6")

            Button:
                id: button
                size_hint: (.2, .2)
                font_size: 32
                text: ""

            Button:
                id: button
